{% extends 'base.html.twig' %}

{% set action = app.current_route == 'app_admin_editor_new' ? 'Ajout' : 'Modification' %}

{% block title %}{{ action }} d'editeur{% endblock %}

{% block body %}
<section class="container px-4">
    <div class="w-50 m-auto">
        <h1>{{ action }} d'editeur</h1>

        {{ form_start(form) }}
        {{ form_row(form.name, {label: 'Nom'}) }}
        {{ form_row(form.certification) }}
        <button type="submit" class="btn btn-primary">Envoyer</button>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}