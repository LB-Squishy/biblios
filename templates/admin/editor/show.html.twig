{% extends 'base.html.twig' %}

{% block title %}Détail d'un editeur{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
    <h1>Editeur : </h1>
    {% if editor is not null %}
        <div class="card mb-1 m-auto">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between">
                    <h4 class="mb-1">{{ editor.name }}</h4>
                    <small class="text-muted">Identifiant : {{ editor.id }}</small>
                </div>
            </div>
        </div>
    {% else %}
        <div>Editeur non trouvé</div>
    {% endif %}
    <a href="{{ path('app_admin_editor_index') }}" class="btn btn-primary">Retour</a>
    <a href="{{ path('app_admin_editor_edit', {id: editor.id}) }}" class="btn btn-warning">Editer</a>
</div>
{% endblock %}