{% extends 'base.html.twig' %}

{% block title %}Détail d'un livre{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
    <h1>Livre : </h1>
    {% if book is not null %}
        <div class="card mb-1 m-auto">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between">
                    <h4 class="mb-1">{{ book.title }}</h4>
                    <small class="text-muted">Identifiant : {{ book.id }}</small>
                </div>
                <div class="d-flex justify-content-between card-text">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Numéro d'ISBN : {{ book.isbn }}</li>
                        <li class="list-group-item">Synopsis : {{ book.plot }}</li>
                    </ul>
                    <p><small>Nbre de page : {{ book.page_number }}</small></p>
                </div>
            </div>
        </div>
    {% else %}
        <div>Livre non trouvé</div>
    {% endif %}
    <a href="{{ path('app_admin_book_index') }}" class="btn btn-primary">Retour</a>
</div>
{% endblock %}